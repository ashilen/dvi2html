{
  "compilerOptions": {
    "target": "es6",
    "removeComments": true,
    "sourceMap": true,    
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es2018"],
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,    
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["./src"]
}
